# Article Pipeline Environment Variables
# Copy this file to .env and update with your values

# Flask Configuration
SECRET_KEY=your-secret-key-here
FLASK_ENV=development

# NLP Configuration
SPACY_MODEL=en_core_web_sm
EXTRACTION_CONFIDENCE_THRESHOLD=0.7

# Database Configuration
DATABASE_URL=sqlite:///pipeline.db
REDIS_URL=redis://localhost:6379/0

# JSON Database Paths
COMPANIES_JSON_PATH=companies_complicit/companies.json
INTERVENTIONS_JSON_PATH=data/us_interventions.json
INVESTMENTS_JSON_PATH=arabs_complicit/arabs_investment.json